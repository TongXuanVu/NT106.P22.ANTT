<UserControl x:Class="LANSPYproject.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:LANSPYproject"
             Background="#F5F7FA">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20">
                    <TextBlock Text="🧭 Tổng quan mạng"
                               FontWeight="Bold"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="18"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth}" Value="800">
                                        <Setter Property="FontSize" Value="16"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ActualWidth}" Value="600">
                                        <Setter Property="FontSize" Value="14"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Border Background="White" CornerRadius="10" Padding="20" MinWidth="300" MaxWidth="500" Margin="0,0,0,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="📱" Margin="0,0,5,0"/>
                                <TextBlock Text="Thiết bị đã kết nối:" FontWeight="Bold"/>
                                <TextBlock Text="5" Margin="10,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <TextBlock Text="👁" Margin="0,0,5,0"/>
                                <TextBlock Text="Cảnh báo thiết bị lạ:" FontWeight="Bold"/>
                                <TextBlock Text="1" Margin="10,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <TextBlock Text="🔄" Margin="0,0,5,0"/>
                                <TextBlock Text="Lần quét gần nhất:" FontWeight="Bold"/>
                                <TextBlock Text="10 phút trước" Margin="10,0,0,0"/>
                            </StackPanel>
                            <Border BorderBrush="Blue" CornerRadius="20" Cursor="Hand" HorizontalAlignment="Center" Margin="0,20,0,0" Padding="8,4"
                                    Background="#FF2D2DAE">
                                <TextBlock Text="Cập nhật" Foreground="White" Padding="10" TextAlignment="Center" FontSize="16" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>