<UserControl x:Class="LANSPYproject.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:LANSPYproject"
             Background="#F5F7FA"
             mc:Ignorable="d">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="20" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <TextBlock Text="🧭 Tổng quan mạng"
                           FontWeight="Bold"
                           FontSize="18"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center" />

                <Border Background="White" CornerRadius="10" Padding="20" MinWidth="300" MaxWidth="600" Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="📱" Margin="0,0,5,0"/>
                            <TextBlock Text="Thiết bị đang kết nối:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding OnlineDevicesCount}" Margin="10,0,0,0"/>
                            <TextBlock Text=" / " />
                            <TextBlock Text="{Binding TotalDevicesCount}" Margin="10,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="👁" Margin="0,0,5,0"/>
                            <TextBlock Text="Cảnh báo thiết bị lạ:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding StrangeDeviceAlerts}" Margin="10,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="🔄" Margin="0,0,5,0"/>
                            <TextBlock Text="Lần quét gần nhất:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding LastScanTime}" Margin="10,0,0,0"/>
                        </StackPanel>

                        <Separator Margin="0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="📶" Margin="0,0,5,0"/>
                            <TextBlock Text="SSID:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding WifiSSID}" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="📡" Margin="0,0,5,0"/>
                            <TextBlock Text="BSSID:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding WifiBSSID}" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="⚡" Margin="0,0,5,0"/>
                            <TextBlock Text="Tốc độ kết nối:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding WifiSpeed}" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="⬆️" Margin="0,0,5,0"/>
                            <TextBlock Text="Upload:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding UploadSpeed}" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="⬇️" Margin="0,0,5,0"/>
                            <TextBlock Text="Download:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding DownloadSpeed}" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="⏱" Margin="0,0,5,0"/>
                            <TextBlock Text="Độ trễ:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding WifiLatency}" Margin="10,0,0,0"/>
                        </StackPanel>

                        <Button Width="120" Height="35" Content="Cập nhật" Foreground="White" FontWeight="Bold" FontSize="14" Cursor="Hand" Margin="10,20" Click="UpdateButton_Click">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#123288" Offset="0"/>
                                    <GradientStop Color="#295EEC" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="20" 
                                                        Padding="8,4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#1A47B8" Offset="0"/>
                                                        <GradientStop Color="#4B7BFF" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
